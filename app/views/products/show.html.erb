<!-- 商品图片 -->
<div class='col-xs-12 col-md-8 product-image'>
  <div class="row">
    <% if @product_images.present? %>
      <% @product_images.each_with_index do |p| %>
        <!-- 显示所有商品图片 -->

          <%= image_tag(p.image.medium.url, class: 'list-image') %>
        
      <% end %>
    <% else %>
      <%= image_tag('http://placehold.it/400x400&text=No Pic', class: 'thumbnail') %>
    <% end %>
  </div>
</div>

<div class="col-md-12">
  <h2><%= @product.name %></h2>
  <p><%= @product.description %></p>
  <div class="group">
    <%= link_to(t('btn-edit'), edit_product_path(@product), class: "btn btn-primary pull-right")%>
    <%= link_to t('btn-delete'), product_path(@product), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-primary pull-right"%>
  </div>
  <p><%= @product.user.name %></p>

</div>
