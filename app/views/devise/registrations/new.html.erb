<div class="row user_setup">
  <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 user_setup_content">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <h2>
          <span class="fa fa-user-circle-o"></span>
          注册
        </h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :name, :label => "昵称：", placeholder: "请输入网店名称", required: true, autofocus: true %>
          <%= f.input :email, :label => "邮箱账户：", placeholder: "请输邮箱地址", required: true %>
          <%= f.input :password, :label => "密码：", placeholder: "请输入密码", required: true, input_html: { maxlength: 16 } %>
          <%= f.input :password_confirmation, :label => "确认密码：", placeholder: "再次确认密码", required: true, input_html: { maxlength: 16 } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "注册" %>
        </div>
        <% end %>

        <hr/>
        <div class="account">
          <%= link_to "已经是巨会养车用户了吗，按此登录", new_session_path(resource_name) %><br/>
        </div>
      </div>
    </div>
  </div>
</div>
